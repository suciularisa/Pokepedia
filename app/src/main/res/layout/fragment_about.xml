<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AboutFragment">

    <TextView
        android:id="@+id/pokemon_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Description"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="@font/custom_font"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pokemon_description"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="10dp">

        <View
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="?attr/secondColor" />

        <TextView
            android:id="@+id/id_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?attr/typeColor"
            android:fontFamily="@font/custom_font"/>

        <TextView
            android:id="@+id/id_pokemon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:fontFamily="@font/custom_font"
            />

        <View
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="?attr/secondColor" />

        <TextView
            android:id="@+id/height_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Height"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?attr/typeColor"
            android:fontFamily="@font/custom_font"
            />

        <TextView
            android:id="@+id/height_pokemon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Height"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:fontFamily="@font/custom_font"
            />

        <View
            android:id="@+id/line3"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="?attr/secondColor" />

        <TextView
            android:id="@+id/weight_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?attr/typeColor"
            android:fontFamily="@font/custom_font"
            />

        <TextView
            android:id="@+id/weight_pokemon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:fontFamily="@font/custom_font"
            />

        <View
            android:id="@+id/line4"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="?attr/secondColor" />

        <TextView
            android:id="@+id/hapiness_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Base Happiness"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?attr/typeColor"
            android:fontFamily="@font/custom_font"
            />

        <TextView
            android:id="@+id/hapiness_pokemon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Base Happiness"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:fontFamily="@font/custom_font"
            />

        <View
            android:id="@+id/line5"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="?attr/secondColor" />

        <TextView
            android:id="@+id/capture_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Capture Rate"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?attr/typeColor"
            android:fontFamily="@font/custom_font"
            />

        <TextView
            android:id="@+id/capture_pokemon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Capture"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:fontFamily="@font/custom_font"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>