<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AboutFragment">

    <TextView
        android:id="@+id/pokemon_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="SQUIRTLE’s shell is not merely used\nfor protection.\nThe shell’s rounded shape and the\u000cgrooves on its surface help minimize\nresistance in water, enabling this\nPOKéMON to swim at high speeds."
        android:textAlignment="center" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/pokemon_description"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp">

        <View
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/purple_200"/>
        <TextView
            android:id="@+id/id_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />
        <TextView
            android:id="@+id/id_pokemon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceMedium"

            />

        <View
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/purple_200"/>
        <TextView
            android:id="@+id/height_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Height"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceSmall"

            />
        <TextView
            android:id="@+id/height_pokemon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Height"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceMedium"

            />

        <View
            android:id="@+id/line3"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/purple_200"/>
        <TextView
            android:id="@+id/weight_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceSmall"

            />
        <TextView
            android:id="@+id/weight_pokemon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceMedium"

            />

        <View
            android:id="@+id/line4"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/purple_200"/>
        <TextView
            android:id="@+id/hapiness_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Base Happiness"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceSmall"

            />
        <TextView
            android:id="@+id/hapiness_pokemon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Base Happiness"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceMedium"

            />

        <View
            android:id="@+id/line5"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/purple_200"/>
        <TextView
            android:id="@+id/capture_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Capture Rate"
            android:textColor="@color/black"

            android:textAppearance="?android:attr/textAppearanceSmall"

            />

        <TextView
            android:id="@+id/capture_pokemon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Capture"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceMedium"

            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>