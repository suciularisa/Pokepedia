<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StatsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="10dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HP"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progress_hp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="10"
                app:trackThickness="15dp"
                app:trackCornerRadius="10dp"
                app:trackColor="@color/white"
                />
            <TextView
                android:id="@+id/tag_hp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NR"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>


        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/purple_200"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attack"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progress_attack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="10"
                app:trackThickness="15dp"
                app:trackCornerRadius="10dp"
                app:trackColor="@color/white"
                />
            <TextView
                android:id="@+id/tag_attack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NR"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/purple_200"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Defense"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progress_defense"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="10"
                app:trackThickness="15dp"
                app:trackCornerRadius="10dp"
                app:trackColor="@color/white"
                />
            <TextView
                android:id="@+id/tag_defense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NR"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/purple_200"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Special-Attack"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progress_special_attack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="10"
                app:trackThickness="15dp"
                app:trackCornerRadius="10dp"
                app:trackColor="@color/white"
                />
            <TextView
                android:id="@+id/tag_special_attack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NR"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/purple_200"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Special-Defense"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progress_special_defense"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="10"
                app:trackThickness="15dp"
                app:trackCornerRadius="10dp"
                app:trackColor="@color/white"
                />
            <TextView
                android:id="@+id/tag_special_defense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NR"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/purple_200"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Speed"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progress_speed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="10"
                app:trackThickness="15dp"
                app:trackCornerRadius="10dp"
                app:trackColor="@color/white"
                />
            <TextView
                android:id="@+id/tag_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NR"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/purple_200"/>

        <TextView
            android:id="@+id/total_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Total"
            android:gravity="center"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/total_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Total"
            android:gravity="center"
            />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>